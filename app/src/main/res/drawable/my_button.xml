<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="#80DEEA" android:endColor="#26C6DA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <solid android:color="#26C6DA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="#26C6DA" android:endColor="@color/colorPrimary" />
        </shape>
    </item>

</selector>